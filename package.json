{
  "name": "risk-management",
  "version": "3.0.0",
  "description": "Template for the Learning Journey Building side-by-side extensions on SAP BTP",
  "author": "m.haug@sap.com",
  "license": "SAP SAMPLE CODE LICENSE",
  "repository": "https://github.com/SAP-samples/sap-learning-extension-suite",
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^3.16.0",
    "@sap/cds": "^8.1.0",
    "@sap/cds-dk": "^8.0.2",
    "@sap/cds-hana": "^2.0.0",
    "@sap/xssec": "^4.1.3",
    "express": "^4.19.2",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1.7.3",
    "@sap/ux-specification": "^1.120.14"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-risk-management": "cds watch --open risk-management/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "risk.viewer@tester.sap.com": {
              "password": "initial",
              "ID": "riskviewer",
              "userAttributes": {
                "email": "risk.viewer@tester.sap.com"
              },
              "roles": [
                "RiskViewer"
              ]
            },
            "risk.manager@tester.sap.com": {
              "password": "initial",
              "ID": "riskmanager",
              "userAttributes": {
                "email": "risk.manager@tester.sap.com"
              },
              "roles": [
                "RiskManager"
              ]
            }
          }
        }
      },
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "credentials": {
          "destination": "BusinessPartners",
          "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER"
        },
        "[hybrid]": {
          "credentials": {
            "destination": "BusinessPartners",
            "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER"
          }
        },
        "[development]": {
          "credentials": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_BUSINESS_PARTNER/"
          }
        }
      },
      "LOCAL_APP": {
        "kind": "odata",
        "credentials": {
          "destination": "LocalApp"
        }
      },
      "Northwind": {
        "kind": "odata",
        "credentials": {
          "destination": "Northwind",
          "path": "/Northwind/Northwind.svc/"
        }
      },
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db.sqlite"
        },
        "schema_evolution": "auto"
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "auth": "xsuaa"
    }
  },
  "sapux": [
    "app/risk-management"
  ]
}
